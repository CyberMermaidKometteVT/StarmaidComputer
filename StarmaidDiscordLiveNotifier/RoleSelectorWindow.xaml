<Window x:Class="StarmaidDiscordLiveNotifier.RoleSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Roles" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="RoleListBox" HorizontalAlignment="Left" Height="Auto" Margin="10,10,0,10" VerticalAlignment="Stretch" Width="Auto"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="10,10,10,10">
            <Button x:Name="OkButton" Content="Ok" Margin="5"/>
            <Button x:Name="CancelButton" Content="Cancel" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>